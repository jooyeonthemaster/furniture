rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 개발 단계에서는 모든 읽기/쓰기 허용 (임시)
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    match /addresses/{addressId} {
      allow read, write: if true;
    }
    
    match /wishlist/{wishlistId} {
      allow read: if true;
      allow write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /addresses/{addressId} {
      allow read: if true;
      allow write: if request.auth != null && resource.data.customerId == request.auth.uid;
    }
    
    match /payments/{paymentId} {
      allow read: if true;
      allow write: if request.auth != null && resource.data.customerId == request.auth.uid;
    }
    
    match /shipping/{shippingId} {
      allow read: if true;
      allow write: if request.auth != null && resource.data.customerId == request.auth.uid;
    }
    
    // 반품 관리 규칙 (개발용 - 모든 접근 허용)
    match /returns/{returnId} {
      allow read, write: if true; // 개발 단계에서 모든 접근 허용
    }
    
    // 🚨 현재: 개발용 임시 규칙 (보안 위험!)
    match /products/{productId} {
      allow read, write: if true; // 임시로 모든 접근 허용
    }
    
    // 🛡️ 프로덕션용 권장 규칙 (향후 적용):
    // match /products/{productId} {
    //   allow read: if true;
    //   allow write: if request.auth != null && 
    //     (request.auth.token.role == 'admin' || request.auth.token.role == 'dealer');
    // }
    
    // 🚨 개발용 임시 규칙 - 사용자 관리 기능 테스트용
    match /users/{userId} {
      allow read, write: if true; // 임시로 모든 접근 허용
    }
    
    // 향후 프로덕션용 보안 규칙:
    // match /users/{userId} {
    //   allow read: if request.auth != null && 
    //     (request.auth.uid == userId || 
    //      request.auth.token.role == 'admin');
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
    
    // 🚨 개발용 임시 규칙 - 채팅 세션 관리 (보안 위험!)
    match /chatSessions/{sessionId} {
      allow read, write: if true; // 개발 단계에서 모든 접근 허용
      
      // 채팅 메시지 하위 컬렉션
      match /messages/{messageId} {
        allow read, write: if true; // 개발 단계에서 모든 접근 허용
      }
    }
    
    // 🛡️ 프로덕션용 권장 규칙 (향후 적용):
    // match /chatSessions/{sessionId} {
    //   allow read, write: if request.auth != null && (
    //     resource.data.customerId == request.auth.uid ||
    //     resource.data.dealerId == request.auth.uid ||
    //     request.auth.token.role == 'admin'
    //   );
    //   allow create: if request.auth != null && 
    //     request.resource.data.customerId == request.auth.uid;
    //   
    //   // 채팅 메시지 하위 컬렉션
    //   match /messages/{messageId} {
    //     allow read, write: if request.auth != null && (
    //       get(/databases/$(database)/documents/chatSessions/$(sessionId)).data.customerId == request.auth.uid ||
    //       get(/databases/$(database)/documents/chatSessions/$(sessionId)).data.dealerId == request.auth.uid ||
    //       request.auth.token.role == 'admin'
    //     );
    //     allow create: if request.auth != null && 
    //       request.resource.data.senderId == request.auth.uid;
    //   }
    // }
  }
} 